<coref-experiment>
<system type="soon">
    <classifiers>
        <classifier type="maxent" model="idc0"
            options="** **"/>
    </classifiers>
    <extractors>
        <!-- general info about antecedent -->
        <extractor name="FE_MentionType"/>
        <!--agreement features -->
        <extractor name="FE_Gender"/>
        <extractor name="FE_Number"/>
        <!--specialized features for aliases / appositive constructions -->
        <extractor name="FE_Alias"/>
        <extractor name="FE_Appositive"/>
        <!-- string matching features -->
        <extractor name="FE_StringMatch" />
        <!--semantic class agreement -->
        <extractor name="FE_SemanticClass"/>
        <extractor name="FE_DistDiscrete"/>
        <!--random other stuff -->
        <extractor name="FE_SemClassValue"/>
        <extractor name="FE_BetterNames"/>
        <extractor name="FE_MentionType_Anaphor"/>
<extractor name="FE_Appositive_iCab"/>
        <extractor name="FE_First_Mention"/>
        <extractor name="FE_Coordination"/>
        <!-- extractor name="FE_Wiki"/ -->

<!-- extra salience features, used for wmt experiment, delete later -->
<extractor name="FE_CorefChain"/>
<extractor name="FE_FirstSecondPerson"/>
<extractor name="FE_MentionType_Ante"/>
<extractor name="FE_MentionType_Salience"/>
<extractor name="FE_NonProSalience"/>

<!-- extra matching for bare plurals -->
        <extractor name="FE_StringMatchExtra" />

<!-- semtrees -->
<extractor name="FE_DE_ShallowRelationIncompatibility" />
<extractor name="FE_DE_ShallowAttributeIncompatibility" />


    </extractors>
</system>
</coref-experiment>
