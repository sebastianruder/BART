<coref-experiment>
<system type="mixrank">
    <classifiers>
        <classifier type="maxent" model="idc0"
            options="** **"/>
       <ranker type="maxent" model="rank_pro"
            options="** **"/>
    </classifiers>
    <extractors subtask="nonpro">
        <!-- general info about antecedent -->
        <extractor name="FE_MentionType"/>
        <!-- agreement features -->
        <extractor name="FE_Gender"/>
        <extractor name="FE_Number"/>
        <!-- specialized features for aliases / appositive constructions -->
        <extractor name="FE_Alias"/>
        <extractor name="FE_Appositive"/>
        <!-- string matching features -->
        <extractor name="FE_StringMatch"/>
        <!-- semantic class agreement -->
        <extractor name="FE_SemanticClass"/>
        <extractor name="FE_DistDiscrete"/>
        <!-- random other stuff -->
        <extractor name="FE_SemClassValue"/>
        <extractor name="FE_BetterNames"/>
        <extractor name="FE_MentionType_Anaphor"/>
        <!-- extractor name="FE_Appositive_iCab"/ -->
        <extractor name="FE_First_Mention"/>
        <!-- extractor name="FE_Wiki"/ -->
    </extractors>
    <extractors subtask="pro">
        <!-- general info about antecedent -->
        <extractor name="FE_MentionType"/>
        <!-- agreement features -->
        <extractor name="FE_Gender"/>
        <extractor name="FE_Number"/>
        <!-- specialized features for aliases / appositive constructions -->
        <extractor name="FE_Alias"/>
        <extractor name="FE_Appositive"/>
        <!-- string matching features -->
        <extractor name="FE_StringMatch"/>
        <!-- semantic class agreement -->
        <extractor name="FE_SemanticClass"/>
        <extractor name="FE_DistDiscrete"/>
        <!-- random other stuff -->
        <extractor name="FE_SemClassValue"/>
        <extractor name="FE_BetterNames"/>
        <extractor name="FE_MentionType_Anaphor"/>
        <!-- extractor name="FE_Appositive_iCab"/ -->
        <extractor name="FE_First_Mention"/>

    </extractors>
</system>
</coref-experiment>
