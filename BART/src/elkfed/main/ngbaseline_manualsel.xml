    Description:
        configuration for Soon et al features
-->

<coref-experiment>
<system type="soon">
    <classifiers>
        <classifier type="maxent" model="idc0"
            options="** **"/>
         <!-- classifier type="weka" model="idc0" learner="weka.classifiers.trees.J48"  options=""/ -->
    </classifiers>
    <extractors>

        <extractor name="FE_Gender"/>
        <extractor name="FE_Number"/>
        <extractor name="FE_Alias"/>
        <extractor name="FE_SemClassAgree"/>
        <extractor name="FE_NgMisc"/>
        <extractor name="FE_Pronominal_StrMatch"/>
        <extractor name="FE_PrprName_StrMatch"/>
        <extractor name="FE_NonPron_StrMatch"/>
        <extractor name="FE_AnimacyAgree"/>
        <extractor name="FE_SameMaxNP"/>

<!-- though included, hardly works for ACE -->
        <extractor name="FE_Copula"/>

<!-- approximation of ng's CONSTRAINTS, also separate feature for anapro -->
        <extractor name="FE_Compatible"/>


<!-- ng has GB, we replace with ccommand for obsure reasons.. --> 
        <extractor name="FE_CCommand"/>

<!-- this is probably more ng's contraindex, than their span -->
        <extractor name="FE_Span"/>
 
<!-- ng has ante_is_subj, we replace with ante's depth in the parse tree -->
        <extractor name="FE_SynPos"/>

<!-- appositives in Soon et al are regexps, not parse-based -->
        <extractor name="FE_AppositiveParse"/>

<!-- distance in Soon et al is abs, not log -->
        <extractor name="FE_DistanceSentence"/>


<!-- CONTRAINDICES are missing, but cf. Span -->

<!-- SYNTAX is in NgMisc, but it is a complex of ccommand, maxnp and span -->

<!-- EMBEDDED is irrelevant for ACE -->

<!-- TITLE is not supported -->

<!-- PRORESOLVE is not supported -->

<!-- APPOINDEF is not supported at the moment -->

    </extractors>
</system>
</coref-experiment>
